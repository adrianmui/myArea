
<div class="row">
  <ul>
    <%= form_tag sessions_path, method: :create do %>
    <form class="form-line">
      <div class="form-group">
        <label for="email"> <%= label_tag :email %> </label>
        <br>
        <%= text_field_tag :email %>
      </div> 
      <div class="form-group">
        <label for="password"> <%= label_tag :password %> </label>
        <br>
        <%= password_field_tag :password %>
      </div>

      <button type="submit" class="btn btn-default"> 
        <%= submit_tag "Log in" %> 
      </button>

      <button type="submit" class="btn btn-default"> 
        <%= link_to "Sign Up", new_user_path %> 
      </button>
    </form>
    <% end %>

  </ul>  
</div>